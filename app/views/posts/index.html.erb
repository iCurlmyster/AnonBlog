<h1>Anon Blog</h1>

<%= render 'sidebar' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="text-center"><%= link_to post.title, post %></td>
       <!-- <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

